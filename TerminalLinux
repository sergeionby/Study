mkdir -p a1 a2 a3
ls
mv /d/Julia/QA-21/"Git Bash"/ABC/A/SUN/a.txt /d/Julia/QA-21/"Git Bash"/ABC/A/SUN/MOON/a.txt | mv /d/Julia/QA-21/"Git Bash"/ABC/A/SUN/b.txt /d/Julia/QA-21/"Git Bash"/ABC/A/SUN/MOON/b.txt
